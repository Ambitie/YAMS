<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:paddingTop="30dp">

    <LinearLayout
        android:id="@+id/mid_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/mid_btn_show"
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_size"
            android:layout_weight="4"
            android:background="@drawable/blue_normal"
            android:gravity="center"
            android:text="点击刷新" />

        <Spinner
            android:id="@+id/mid_spn_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

        <Button
            android:id="@+id/mid_btn_add"
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_size"
            android:layout_weight="4"
            android:background="@drawable/btn_common_pressed"
            android:textColor="#eeeeee"
            android:text="添加到组" />
    </LinearLayout>

    <ListView
        android:id="@+id/mid_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mid_ll" />
</RelativeLayout>
